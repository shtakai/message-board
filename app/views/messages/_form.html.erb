<div class="panel panel-default">
    <div class="panel-heading">
        メッセージを<%= @post_type %>
    </div>
    <div class="panel-body">
        <%= form_for @message, html: { class: "form-horizontal center"} do |f| %>
         
            <% if @message.errors.present? %>
                <div class="alert alert-danger">
                    <%= alert %>
                    <ul>
                        <% @message.errors.full_messages.each do |full_message| %>
                            <li>
                                <%= full_message%>
                            </li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
                    
            <div class="form-group">
                <%= f.label :name, "名前", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: "form-control", placeholder: "your name" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :body, "内容", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_area :body, class: "form-control", placeholder: "message body" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-sm btn-primary" %>
                </div>
            </div>
        <% end %>
        
    </div>
</div>

