<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
        <br>
        <% end %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージを投稿
    </div>
    <div class="panel-body">
        <%= form_for @message, html: { class: "form-horizontal center"} do |f| %>
            <div class="form-group">
                <%= f.label :name, "名前", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_field :name, placeholder: "your name" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :body, "内容", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_area :body, placeholder: "message body" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-sm btn-primary" %>
                </div>
            </div>
        <% end %>
        
    </div>
</div>
